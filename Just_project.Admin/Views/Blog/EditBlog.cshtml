@model Just_project.Admin.Models.UpdateBlogViewModel

<h2>Редактировать блог</h2>

<form asp-action="EditBlog" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Заголовок (EN)</label>
        <input asp-for="Title_en" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Описание (EN)</label>
        <textarea asp-for="Description_en" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Заголовок (RU)</label>
        <input asp-for="Title_ru" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Описание (RU)</label>
        <textarea asp-for="Description_ru" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Заголовок (KK)</label>
        <input asp-for="Title_kk" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Описание (KK)</label>
        <textarea asp-for="Description_kk" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Новое изображение (необязательно)</label>
        <input asp-for="NewImage" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
