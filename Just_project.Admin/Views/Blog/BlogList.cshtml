@model List<Just_project.Admin.Models.BlogTranslationModel>

<h2>Список блогов</h2>
<a href="/Blog/AddBlog" class="btn btn-success mb-3">Добавить новый</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Язык</th>
            <th>Заголовок</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.BlogId</td>
                <td>@blog.Language</td>
                <td>@blog.Title</td>
                <td>@blog.Description</td>
                <td>
                    <a asp-controller="Blog" asp-action="EditBlog" asp-route-id="@blog.BlogId">Изменить</a>
                    <a asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.BlogId">Удалить</a>

                </td>
            </tr>
        }
    </tbody>
</table>
