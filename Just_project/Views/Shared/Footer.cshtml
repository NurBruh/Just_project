@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


@{
}
<!-- START OF FOOTER -->
<footer class="footer">
    <div class="w-layout-blockcontainer container w-container">
        <div class="w-layout-grid grid-footer-top">
            <div class="footer-top-item">
                <a class="w-inline-block" asp-controller="Home" asp-action="Index">
                    <img src="~/images/gearo-logo1.png" loading="lazy" alt="image" class="footer-logo" />
                </a>
            </div>
            <div class="footer-top-item">
                <img src="~/images/location.svg" loading="lazy" alt="image" class="footer-contact-icon" />
                <div class="footer-contact-info">
                    <h3 class="footer-contact-title">@Localizer["Location"]</h3>
                    <div class="footer-contact-text">@Localizer["Address"]</div>
                </div>
            </div>
            <div class="footer-top-item">
                <img src="~/images/email-icon.svg" loading="lazy" alt="image" class="footer-contact-icon" />
                <div class="footer-contact-info">
                    <h3 class="footer-contact-title">@Localizer["Email"]</h3>
                    <a href="mailto:hello@gmail.com" class="footer-contact-text">hello@gmail.com</a>
                </div>
            </div>
            <div class="footer-top-item">
                <img src="~/images/phone-icon.svg" loading="lazy" alt="image" class="footer-contact-icon" />
                <div class="footer-contact-info">
                    <h3 class="footer-contact-title">@Localizer["Contact Number"]</h3>
                    <a href="tel:+7474307005" class="footer-contact-text">+7474307005</a>
                    <a href="tel:+7073940282" class="footer-contact-text"> +7073940282</a>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- END OF FOOTER -->