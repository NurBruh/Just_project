@model List<Just_project.Admin.Models.ComponentsViewModel>

@{
    ViewData["Title"] = "Список компонентов";
}

<h2>Список компонентов</h2>

<p>
    <a asp-action="ComponentsAdd" class="btn btn-primary">Добавить компонент</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var component in Model)
        {
            <tr>
                
                <td>@component.Title</td>
                <td>@component.Description</td>
                <td>@component.KZTPrice</td>
                <td>
                    <a asp-action="ComponentsEdit" asp-route-id="@component.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-action="ComponentsDelete" asp-route-id="@component.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
