@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "FAQs";
}
<!-- HERO INNER SECTION -->
<section class="hero-inner text-center">
    <div class="container w-container">
        <div class="hero-inner-wrap">
            <h1 class="hero-inner-title">@Localizer["Questions"]</h1>
        </div>
        <div class="hero-inner-overly"></div>
    </div>
</section>

<!-- FAQS SECTION -->
<section class="faqs-section section-spacing">
    <div class="container-medium w-container">
        <div class="faqs-wrap">
            <!-- PRODUCTS FAQS -->
            <div class="faqs-item">
                <h2 class="heading-h3">@Localizer["Items"]</h2>
                <div class="accordion-item-wrap">
                    <div class="accordion-item">
                        <!-- FAQ ITEM 1 -->
                        <div class="accordion-wrap">
                            <div class="accordion-heading">
                                <div class="accordion-number">Q.1</div>
                                <div class="accordion-title-wrap">
                                    <h3 class="accordion-title">@Localizer["What"]</h3>
                                    <img src="~/images/chevron-down.svg" loading="lazy" alt="image" class="accordion-icon" />
                                </div>
                            </div>
                            <div class="accordion-content">
                                <p class="accordion-description">
                                    @Localizer["What_mess"]
                                </p>
                            </div>
                        </div>
                        <!-- FAQ ITEM 2 -->
                        <div class="accordion-wrap">
                            <div class="accordion-heading">
                                <div class="accordion-number">Q.2</div>
                                <div class="accordion-title-wrap">
                                    <h3 class="accordion-title">@Localizer["Zakaz"]</h3>
                                    <img src="~/images/chevron-down.svg" loading="lazy" alt="image" class="accordion-icon" />
                                </div>
                            </div>
                            <div class="accordion-content">
                                <p class="accordion-description">
                                    @Localizer["Zakaz_mess"]
                                </p>
                            </div>
                        </div>
                        <!-- FAQ ITEM 3 -->
                        <div class="accordion-wrap">
                            <div class="accordion-heading">
                                <div class="accordion-number">Q.3</div>
                                <div class="accordion-title-wrap">
                                    <h3 class="accordion-title">
                                        @Localizer["Cancer"]
                                        
                                        </h3>
                                    <img src="~/images/chevron-down.svg" loading="lazy" alt="image" class="accordion-icon" />
                                </div>
                            </div>
                            <div class="accordion-content">
                                <p class="accordion-description">
                                    @Localizer["Cancer_mess"]
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SHIPPING AND RETURNS FAQS -->
            <div class="faqs-item">
                <h2 class="heading-h3">@Localizer["faqs_item"]</h2>
                <div class="accordion-item-wrap">
                    <div class="accordion-item">
                        <!-- FAQ ITEM 1 -->
                        <div class="accordion-wrap">
                            <div class="accordion-heading">
                                <div class="accordion-number">Q.1</div>
                                <div class="accordion-title-wrap">
                                    <h3 class="accordion-title">@Localizer["Dostavka"]</h3>
                                    <img src="~/images/chevron-down.svg" loading="lazy" alt="image" class="accordion-icon" />
                                </div>
                            </div>
                            <div class="accordion-content">
                                <p class="accordion-description">
                                    @Localizer["Dostavka_mess"]
                                </p>
                            </div>
                        </div>
                        <!-- FAQ ITEM 2 -->
                        <div class="accordion-wrap">
                            <div class="accordion-heading">
                                <div class="accordion-number">Q.2</div>
                                <div class="accordion-title-wrap">
                                    <h3 class="accordion-title">@Localizer["Free"]</h3>
                                    <img src="~/images/chevron-down.svg" loading="lazy" alt="image" class="accordion-icon" />
                                </div>
                            </div>
                            <div class="accordion-content">
                                <p class="accordion-description">
									@Localizer["Free_mess"]
                                </p>
                            </div>
                        </div>
                        <!-- FAQ ITEM 3 -->
                        <div class="accordion-wrap">
                            <div class="accordion-heading">
                                <div class="accordion-number">Q.3</div>
                                <div class="accordion-title-wrap">
                                    <h3 class="accordion-title">@Localizer["Address"]</h3>
                                    <img src="~/images/chevron-down.svg" loading="lazy" alt="image" class="accordion-icon" />
                                </div>
                            </div>
                            <div class="accordion-content">
                                <p class="accordion-description">
                                    @Localizer["Address_mess"]
                                </p>
                            </div>
                        </div>
                        <!-- FAQ ITEM 4 -->
                        <div class="accordion-wrap">
                            <div class="accordion-heading">
                                <div class="accordion-number">Q.4</div>
                                <div class="accordion-title-wrap">
                                    <h3 class="accordion-title">@Localizer["Zakaz1"]</h3>
                                    <img src="~/images/chevron-down.svg" loading="lazy" alt="image" class="accordion-icon" />
                                </div>
                            </div>
                            <div class="accordion-content">
                                <p class="accordion-description">@Localizer["Zakaz1_mess"]</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>