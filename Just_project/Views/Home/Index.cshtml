@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model HomePageModels



@{
	ViewData["Title"] = "Home Page";
}

<!-- HERO SECTION -->
<section class="simple-hero-section">
	<div class="w-layout-blockcontainer container w-container">
		<div class="hero-simple-wrap">
			<h1 class="hero-simple-title"> @Localizer["Nasslad"] <span class="primary-span"> @Localizer["Were"] </span> @Localizer["Job"] </h1>
			<div class="hero-simple-button-wrap">
				<a class="button-primary-1 w-button" asp-controller="Shop" asp-action="Index">@Localizer["View all products"] </a>
				<a href="/sale-product" class="button-white w-button">@Localizer["Sale"]</a>
			</div>
		</div>
		<div class="hero-simple-overly"></div>
	</div>
</section>

<!-- MARQUEE SECTION -->
<div class="marquee-item">
	<div class="marquee-list">
		<div class="marquee-text">@Localizer["First_sales"]</div>
		<div class="marquee-dot"></div>
		<div class="marquee-text">@Localizer["First_sales"]</div>
		<div class="marquee-dot"></div>
		<div class="marquee-text">@Localizer["First_sales"]</div>
		<div class="marquee-dot"></div>
		<div class="marquee-text">@Localizer["First_sales"]</div>
		<div class="marquee-dot"></div>
		<div class="marquee-text">@Localizer["First_sales"]</div>
		<div class="marquee-dot"></div>
		<div class="marquee-text">@Localizer["First_sales"]</div>
		<div class="marquee-dot"></div>
		<div class="marquee-text">@Localizer["First_sales"]</div>
		<div class="marquee-dot"></div>
		<div class="marquee-text">@Localizer["First_sales"]</div>
		<div class="marquee-dot"></div>
	</div>
</div>
<!-- END OF MARQUEE SECTION -->
<!-- START OF PRODUCT SECTION (Our Products) -->
<section class="product-section section-spacing">
	<div class="w-layout-blockcontainer container w-container">
		<div class="product-top-wrap">
			<h2 class="no-margin">@Localizer["Products"]</h2>
			<a class="button-dark w-button" asp-controller="Shop" asp-action="Index"> @Localizer["View all products"]</a>
		</div>
		<div class="w-dyn-list">
				</div>
				@foreach (var pc in Model.PCs)
				{
					string base64 = Convert.ToBase64String(pc.ImagePath);
					string imageSrc = $"data:image/jpg;base64,{base64}";
					<div class="w-dyn-item">
						<a href="/product/adjustable-wrenches" class="product-item w-inline-block">
							<div class="product-image-wrap">
								<div class="product-item">
									<div class="product-image-container">
										<img src="@imageSrc"  class="product-image" />
									</div>
								</div>
							</div>
							<div class="product-info-wrap">
								<h3 class="product-title">@pc.Title</h3>
								<div class="product-price-wrap">
									<div class="product-price">@pc.ShowPrice</div>

								</div>
							</div>
						</a>
					</div>
				}
				
				
			<style >
			.product-item {
				width: 200px;
				margin: 10px;
				font-family: 'Helvetica Neue', sans-serif;
			}

			.product-image-container {
				width: 100%;
				height: 200px;
				overflow: hidden;
				background: #f5f5f5;
			}
				</style>
				

			</div>
		</div>
	</div>
</section>
<!-- END OF PRODUCT SECTION (Our Products) -->
<!-- START OF CTA SECTION -->
<section class="cta-section">
	<div class="w-layout-blockcontainer container w-container">
		<div class="cta-wrap">
			<div class="cta-overly"></div>
			<div class="w-layout-grid grid-cta">
				<div class="cta-title-wrap">
					<h3 class="cta-title"> @Localizer["Save_"] <span class="primary-span">20%</span></h3>
					<p class="cta-description"> @Localizer["save_mess"] </p>
				</div>
				<div class="cta-button-wrap">
					<a href="/sale-product" class="button-white w-button">@Localizer["Build"] </a>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- END OF CTA SECTION -->
<!-- START OF PRODUCT SECTION (Feature Collection) -->
<section class="product-section section-spacing-top">
	<div class="w-layout-blockcontainer container w-container">
		<div class="w-layout-grid grid-product-two">
			<div class="product-title-wrap">
				<div class="section-title"><h2>@Localizer["Parts"]</h2></div>
				<a class="button-dark w-button" asp-controller="Shop" asp-action="Index">@Localizer["Parts_shop"]</a>
			</div>
			<div class="product-slide-wrap">
				<div class="product-slider w-slider">
					<div class="product-mask w-slider-mask">
						@foreach(var component in Model.Components)
						{
						<div class="product-slide w-slide">
							<div class="w-dyn-list">
								<div class="w-dyn-items">
									<div class="w-dyn-item">
										<a href="/product/ratchet-spanner-and-faced-hammer" class="product-item w-inline-block">
											<div class="product-image-wrap">
												<img src="~/images/RTX5090.png" alt="Ratchet spanner and faced hammer" class="product-image" />
											</div>
											<div class="product-info-wrap">
												<h3 class="product-title">@component.Title</h3>
												<div class="product-price-wrap">
													<div class="product-price">@component.KZTPrice</div>
												</div>
											</div>
										</a>
									</div>
								</div>
							</div>
						</div>
						}

					</div>
					<div class="left-arrow w-slider-arrow-left">
						<img src="images/chevron-right.svg" alt="Previous" class="product-icon" />
					</div>
					<div class="right-arrow w-slider-arrow-right">
						<img src="images/chevron-left.svg" alt="Next" class="product-icon" />
					</div>
					<div class="slider-nav w-slider-nav w-round w-num"></div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- END OF PRODUCT SECTION (Feature Collection) -->
<!-- START OF CATEGORY SECTION -->
<section class="category-section section-spacing">
	<div class="container w-container">
		<div class="section-title"><h2>@Localizer["Category"]</h2></div>
		<div class="category-slider-wrap">
			<div class="category-slider w-slider">
				<div class="category-mask w-slider-mask">
					 @foreach (var complists in Model.Complists)
					{

						string base64 = Convert.ToBase64String(complists.ImagePath);
						string imageSrc = $"data:image/jpg;base64,{base64}";
						<div class="category-slide w-slide">
							<div class="w-dyn-list">
								<div class="w-dyn-items">
									<div class="w-dyn-item">
										<a href="/category/carpenter-tool" class="category-simple-item w-inline-block">
											<div class="category-simple-image-wrap">
												<img alt="image"
													 loading="lazy"
													 src="@imageSrc"
													 sizes="(max-width: 479px) 94vw, (max-width: 767px) 96vw, (max-width: 1279px) 46vw, 45vw"
													 class="blog-image" />
											</div>
											<h3 class="category-simple-title">@complists.Title</h3>
										</a>
									</div>
								</div>
							</div>
						</div>
					} 
		
				</div>	
				<div class="category-left-arrow w-slider-arrow-left"><img src="images/left-arrow.svg" loading="lazy" alt="image" class="slide-icon" /></div>
				<div class="category-right-arrow w-slider-arrow-right"><img src="images/right-arrow.svg" loading="lazy" alt="image" class="slide-icon" /></div>
				<div class="slider-nav w-slider-nav w-round w-num"></div>
			</div>
		</div>
	</div>
</section>
<!-- END OF CATEGORY SECTION -->
<!-- START OF NEW PRODUCT SECTION -->

<!-- END OF NEW PRODUCT SECTION -->
<!-- START OF BLOG SECTION -->
<section class="blog-section section-spacing">
	<div class="container w-container">
		<div class="blog-top-wrap">
			<h2 class="no-margin">@Localizer["Update"]</h2>
			<a class="button-dark w-button" asp-controller="Blog" asp-action="Index">@Localizer["Blogs_view"]</a>
		</div>
		<div class="w-dyn-list">
			<div class="grid-blog w-dyn-items">
				@foreach (var blog in Model.Blogs){
					string base64 = Convert.ToBase64String(blog.ImagePath);
					string imageSrc = $"data:image/jpg;base64,{base64}";
					<div class="w-dyn-item">
						<a href="/blog/the-latest-innovations-in-craftsmanship" class="blog-item w-inline-block">
							<div class="blog-image-wrap">
								<img alt="image"
									 loading="lazy"
									 src="@imageSrc"
									 sizes="(max-width: 479px) 94vw, (max-width: 767px) 96vw, (max-width: 1279px) 46vw, 45vw"
									 class="blog-image" />
								<div class="blog-date">@blog.Date</div>
							</div>
							<div class="blog-info"><h3 class="blog-title">@blog.Title</h3></div>
						</a>
					</div>
				}

			</div>
		</div>
	</div>
</section>
